{
  "name": "emanuellopes/wp.posttype-easy-creation",
  "description": "Ecosystem Package to use in wordpress themes",
  "type": "library",
  "license": "MIT",
  "version": "1.0.1",
  "scripts": {
    "cs": [
      "./vendor/bin/phpcs -s"
    ],
    "cs-fix": "./vendor/bin/phpcbf",
    "lint": [
      "@cs",
      "@phpstan"
    ],
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1"
  },
  "autoload": {
    "psr-4": {
      "SampleThemeApp\\": "sample-theme/App",
      "emanuellopes\\WpPostType\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Emanuel Lopes",
      "email": "emanuel.lopes.pt@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-json": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "friendsofphp/php-cs-fixer": "^3.0.0",
    "johnpbloch/wordpress-core": "^5.9",
    "kint-php/kint": "^3.3",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.3",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5",
    "slevomat/coding-standard": ">=7",
    "szepeviktor/phpstan-wordpress": "^1.0",
    "escapestudios/symfony2-coding-standard": "^3.12"
  },
  "archive": {
    "exclude": [
      "/_dev/*",
      ".editorconfig",
      "/.gitignore",
      "/docker-compose.yml",
      "/phpcs.xml",
      "/phpstan.neon"
    ]
  }
}
